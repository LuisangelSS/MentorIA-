{
  "name": "mentorIA-backend",
  "version": "1.0.0",
  "description": "Backend de MentorIA con Node.js y Express",
  "main": "src/backend/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/backend/server.js",
    "dev": "nodemon src/backend/server.js",
    "build-css": "npx @tailwindcss/cli@latest -i ./src/frontend/css/input.css -o ./src/frontend/css/style.css --watch",
    "build-css-prod": "npx @tailwindcss/cli@latest -i ./src/frontend/css/input.css -o ./src/frontend/css/style.css --minify",
    "dev:full": "concurrently \"npm run build-css\" \"npm run dev\""
  },
  "dependencies": {
    "@google/genai": "^1.21.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "marked": "^16.3.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  }
}
